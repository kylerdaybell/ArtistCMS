@model KylerAndBrandonCMS2.Models.Page

    <form asp-action="AddPageConfirmed">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name of New Page</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header" class="control-label">Page Discription</label>
            <input asp-for="Header" class="form-control" />
            <span asp-validation-for="Header" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Footer" class="control-label">Page Footer</label>
            <input asp-for="Footer" class="form-control" />
            <span asp-validation-for="Footer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>