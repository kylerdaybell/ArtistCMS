@model UserModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

@{
}
@if (SignInManager.IsSignedIn(User))
{
    <h1>your allready signed in bro</h1>
    <form class="nav-link text-dark" asp-controller="UserManager" asp-action="Logout">
        <input type="submit" value="Sign Out" class="btn" />
    </form>
}
else
{


    <h1>LOGIN</h1>

    <div class="LoginBox">
        <h4>Login</h4>
        <form asp-controller="UserManager" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn" />
            </div>
        </form>
        <form class="nav-link text-dark" asp-controller="Home" asp-action="Register">
            <input type="submit" value="Register" class="btn" />
        </form>
</div>

}
